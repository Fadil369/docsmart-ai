# DocSmart AI - Environment Configuration

# OpenAI Configuration (Required)
VITE_OPENAI_API_KEY=your_openai_api_key_here
VITE_OPENAI_BASE_URL=https://api.openai.com/v1
VITE_OPENAI_MODEL=gpt-4o

# Azure AI Services (Optional - Enhanced translation and analysis)
VITE_AZURE_AI_LANGUAGE_KEY=your_azure_language_key_here
VITE_AZURE_AI_LANGUAGE_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
VITE_AZURE_TRANSLATOR_KEY=your_azure_translator_key_here
VITE_AZURE_TRANSLATOR_ENDPOINT=https://api.cognitive.microsofttranslator.com/
VITE_AZURE_TRANSLATOR_REGION=global

# GitHub Integration (Optional - Enhanced collaboration features)
VITE_GITHUB_TOKEN=your_github_token_here
VITE_GITHUB_COPILOT_API_KEY=your_github_copilot_api_key_here

# Application Configuration
VITE_APP_NAME=DocSmart AI
VITE_APP_VERSION=2.0.0
VITE_APP_DESCRIPTION=Advanced Document Processing Platform
VITE_APP_URL=https://docsmart-ai.pages.dev

# Feature Flags
VITE_ENABLE_OCR=true
VITE_ENABLE_COLLABORATION=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_OFFLINE_SUPPORT=true
VITE_ENABLE_NOTIFICATIONS=true

# Performance Settings
VITE_MAX_FILE_SIZE=52428800
VITE_MAX_CONCURRENT_PROCESSING=4
VITE_CHUNK_SIZE=1048576
VITE_WORKER_ENABLED=true

# Security Settings
VITE_SANITIZATION_ENABLED=true
VITE_ENCRYPTION_ENABLED=false

# Analytics and Monitoring
VITE_ANALYTICS_ENABLED=true
VITE_ERROR_REPORTING_ENABLED=true
VITE_PERFORMANCE_MONITORING_ENABLED=true

# API Rate Limiting
VITE_API_RATE_LIMIT=100
VITE_API_BURST_LIMIT=20

# Cache Settings
VITE_CACHE_ENABLED=true
VITE_CACHE_TTL=3600000
VITE_OFFLINE_CACHE_ENABLED=true

# Cloudflare Configuration
VITE_CF_PAGES_URL=https://docsmart-ai.pages.dev
VITE_CF_ANALYTICS_TOKEN=your_cf_analytics_token_here

# Development Settings
VITE_DEV_PORT=5173
VITE_DEV_HOST=localhost
VITE_DEV_HTTPS=false

# Build Settings
VITE_BUILD_SOURCEMAP=true
VITE_BUILD_MINIFY=true
VITE_BUILD_TARGET=esnext

# PWA Configuration
VITE_PWA_ENABLED=true
VITE_PWA_OFFLINE_ENABLED=true
VITE_PWA_UPDATE_CHECK_INTERVAL=60000

# Localization
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,ar,es,fr,de,it,pt,ru,ja,ko,zh

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_THEME_AUTO_SWITCH=true
