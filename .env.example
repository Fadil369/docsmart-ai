# Environment Configuration for DocSmart AI

# Application Settings
VITE_APP_NAME="DocSmart AI"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENV="development"
VITE_APP_URL="http://localhost:5173"

# API Configuration
VITE_API_BASE_URL="https://api.docsmart-ai.com"
VITE_API_TIMEOUT="30000"

# Authentication
VITE_AUTH_ENABLED="true"
VITE_JWT_SECRET="your-jwt-secret-key-here"
VITE_JWT_EXPIRY="24h"
VITE_PASSWORD_RESET_EXPIRY="1h"

# Email Configuration
VITE_EMAIL_SERVICE="sendgrid"
VITE_SENDGRID_API_KEY="your-sendgrid-api-key"
VITE_FROM_EMAIL="noreply@docsmart-ai.com"
VITE_SUPPORT_EMAIL="support@docsmart-ai.com"

# Payment Integration
VITE_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_key_here"
VITE_PAYPAL_CLIENT_ID="your-paypal-client-id"
VITE_PAYMENT_SUCCESS_URL="/payment/success"
VITE_PAYMENT_CANCEL_URL="/payment/cancel"

# File Upload & Storage
VITE_MAX_FILE_SIZE="10485760"  # 10MB in bytes
VITE_ALLOWED_FILE_TYPES="pdf,doc,docx,txt,rtf"
VITE_UPLOAD_ENDPOINT="/api/upload"
VITE_STORAGE_PROVIDER="cloudflare"
VITE_CLOUDFLARE_ACCOUNT_ID="your-cloudflare-account-id"
VITE_CLOUDFLARE_API_TOKEN="your-cloudflare-api-token"

# AI/ML Services
VITE_AI_SERVICE_ENABLED="true"
VITE_OPENAI_API_KEY="your-openai-api-key"
VITE_AI_MODEL="gpt-4"
VITE_AI_MAX_TOKENS="2048"

# Analytics & Monitoring
VITE_ANALYTICS_ENABLED="true"
VITE_GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
VITE_SENTRY_DSN="your-sentry-dsn"
VITE_LOG_LEVEL="info"

# Feature Flags
VITE_FEATURE_COLLABORATION="true"
VITE_FEATURE_TEMPLATES="true"
VITE_FEATURE_AI_ANALYSIS="true"
VITE_FEATURE_REAL_TIME="true"

# Security
VITE_CORS_ORIGINS="http://localhost:5173,https://docsmart-ai.com"
VITE_RATE_LIMIT_REQUESTS="100"
VITE_RATE_LIMIT_WINDOW="15"  # minutes

# Development
VITE_DEBUG_MODE="false"
VITE_MOCK_API="false"
VITE_HOT_RELOAD="true"